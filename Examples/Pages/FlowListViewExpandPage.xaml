<?xml version="1.0" encoding="UTF-8"?>
<local:PFContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="Examples.Pages.FlowListViewExpandPage" xmlns:local="clr-namespace:DLToolkit.PageFactory" 
	x:TypeArguments="Examples.ViewModels.FlowListViewExpandViewModel" 
	xmlns:flv="clr-namespace:DLToolkit.Forms.Controls;assembly=DLToolkit.Forms.Controls.FlowListView" 
	Title="FlowListView Expand Example">
	<ContentPage.Content>
		<flv:FlowListView x:Name="FlowListView" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
			IsGroupingEnabled="True" FlowGroupKeySorting="Ascending" FlowGroupItemSorting="Ascending" GroupDisplayBinding="{Binding Key}"
			FlowColumnExpand="First" FlowItemsSource="{Binding Items}">
		</flv:FlowListView>
	</ContentPage.Content>
</local:PFContentPage>
